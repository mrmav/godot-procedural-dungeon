[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform vec4 fill_color : hint_color = vec4(1);
uniform vec4 line_color : hint_color = vec4(1);
uniform int line_thickness : hint_range(0, 4) = 1;

void fragment() {
	vec2 size = TEXTURE_PIXEL_SIZE * float(line_thickness);
	
	float outline = 0.0;
	
	outline += texture(TEXTURE, UV + vec2(-size.x, 0)).a;
	outline += texture(TEXTURE, UV + vec2(0, size.y)).a;
	outline += texture(TEXTURE, UV + vec2(size.x, 0)).a;
	outline += texture(TEXTURE, UV + vec2(0, -size.y)).a;
	
	// the commented lines bellow, added the diagonals of the stroke
	//outline += texture(TEXTURE, UV + vec2(-size.x, size.y)).a;
	//outline += texture(TEXTURE, UV + vec2(size.x, size.y)).a;
	//outline += texture(TEXTURE, UV + vec2(-size.x, -size.y)).a;
	//outline += texture(TEXTURE, UV + vec2(size.x, -size.y)).a;
	
	outline = min(outline, 1.0);
	
	vec4 texture_color = texture(TEXTURE, UV);
	COLOR = mix(fill_color * texture_color.a, line_color, step(1, outline - texture_color.a));  // adding the step function eliminates the lighter pixels on fill color
}"

